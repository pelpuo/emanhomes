    <script>
      const form = document.querySelector("#editform")
      form.addEventListener("submit", (e)=>{
        e.preventDefault()
        const id = form.dataset["id"]
        
        const data = {
          description: form.elements["description"].value,
          location: form.elements["location"].value,
          price: form.elements["price"].value,
          size: form.elements["size"].value,
          buildingStatus: form.elements["buildingStatus"].value,
          interiorFeatures: form.elements["interiorFeatures"].value,
          exteriorFeatures: form.elements["exteriorFeatures"].value,
          coverPhoto: form.elements["coverPhoto"].value,
          image1: form.elements["image1"].value,
          image2: form.elements["image2"].value,
          image3: form.elements["image3"].value,
          image4: form.elements["image4"].value,
          image5: form.elements["image5"].value
        }

        fetch(`/house/${id}`, {
          method: 'PUT',
          headers:{
            'Content-type': 'application/json'
          },
          body: JSON.stringify(data)
        }).then(response => response.json())
        .then(response => {
          if(response.message == "success"){
            location.reload()
            alert("House updated successfully")
          }
        })


      })

    </script>
  
